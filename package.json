{
  "name": "react-module-federation-demo",
  "version": "1.0.0",
  "description": "React + Webpack 5 + Module Federation Demo with multiple micro frontends",
  "scripts": {
    "start:main": "npm run dev --workspace=main-app",
    "start:remoteA": "npm run dev --workspace=remoteA",
    "start:remoteB": "npm run dev --workspace=remoteB",
    "build:main": "npm run build --workspace=main-app",
    "build:remoteA": "npm run build --workspace=remoteA",
    "build:remoteB": "npm run build --workspace=remoteB",
    "build": "npm run build:main && npm run build:remoteA && npm run build:remoteB",
    "dev": "concurrently \"npm run start:main\" \"npm run start:remoteA\" \"npm run start:remoteB\"",
    "install:all": "npm install && npm install --workspaces",
    "clean": "npm run clean --workspaces",
    "clean:full": "npm run clean --workspaces && rm -rf node_modules"
  },
  "workspaces": [
    "main-app",
    "remoteA",
    "remoteB"
  ],
  "devDependencies": {
    "concurrently": "^8.2.2",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^4.15.1",
    "@babel/core": "^7.23.0",
    "@babel/preset-react": "^7.22.0",
    "@babel/preset-env": "^7.23.0",
    "babel-loader": "^9.1.3",
    "css-loader": "^6.8.1",
    "style-loader": "^3.3.3",
    "html-webpack-plugin": "^5.5.3"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  }
}